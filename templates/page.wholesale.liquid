<div class="page-width">
  <div class="grid">
    <div class="grid__item medium-up--five-sixths medium-up--push-one-twelfth">
      <div class="section-header text-center">
        <h1>{{ page.title }}</h1>
        {% section 'hero_contact'%}
      </div>

      {% if page.content.size > 0 %}
        <div class="rte">
          {{ page.content }}
        </div>
      {% endif %}

      <div class="contact-form form-vertical">
        {%- assign formId = 'ContactForm' -%}
        {% form 'contact', id: formId %}
          {% include 'form-status', form: form, form_id: formId %}

          <div class="grid grid--half-gutters">
         
          <div class="grid__item medium-up--one-half">
              <label for="{{ formId }}-first_name">{{ 'contact.form.first_name' | t }}  <span aria-hidden="true">*</span></label>
              <input type="text"   aria-required="true" id="{{ formId }}-name" name="contact[{{ 'contact.form.first_name' | t }}]" 
                value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}" required>
           </div>

           <div class="grid__item medium-up--one-half">
              <label for="{{ formId }}-last_name">{{ 'contact.form.last_name' | t }}  <span aria-hidden="true">*</span></label>
              <input type="text"   aria-required="true" id="{{ formId }}-name" name="contact[{{ 'contact.form.name' | t }}]" 
                value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}" required>
           </div>

           <div class="grid__item medium-up--one-half">
              <label for="{{ formId }}-company_name">{{ 'contact.form.company_name' | t }}  <span aria-hidden="true">*</span></label>
              <input type="text" aria-required="true" id="{{ formId }}-name" name="contact[{{ 'contact.form.name' | t }}]" 
                value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}" required>
           </div>
            
          <div class="grid__item medium-up--one-half">
              <label for="{{ formId }}-email">{{ 'contact.form.email' | t }} <span aria-hidden="true">*</span></label>
              <input
                type="email"
                id="{{ formId }}-email"
                name="contact[email]"
                autocorrect="off"
                autocapitalize="off"
                value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                aria-required="true"
                {%- if form.errors contains 'email' -%}
                  class="input--error"
                  aria-invalid="true"
                  aria-describedby="{{ formId }}-email-error"
                {%- endif -%}
               required >
              {%- if form.errors contains 'email' -%}
                <span id="{{ formId}}-email-error" class="input-error-message">
                  <span class="visually-hidden">{{ 'general.accessibility.error' | t }} </span>
                  {% include 'icon-error' %}
                  <span>{{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}.</span>
                </span>
              {%- endif -%}
      </div>
          </div>

          <label for="{{ formId }}-phone">{{ 'contact.form.phone' | t }}<span aria-hidden="true">*</span> <small>Format: 123-456-7890</small> </label> 
          <input type="tel" aria-required="true"  id="{{ formId }}-phone" name="contact[{{ 'contact.form.phone' | t }}]" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}"  required>
       
          <label for="{{ formId }}-social_handle">{{ 'contact.form.social_handle' | t }}  <span aria-hidden="true">*</span>  <small>Format: @socialname </small> </label>
              <input type="text"   aria-required="true" id="{{ formId }}-name" name="contact[{{ 'contact.form.social_handle' | t }}]" 
                value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}" required>
        
          <label for="{{ formId }}-message">{{ 'contact.form.message' | t }}</label>
          <textarea rows="10" id="{{ formId }}-message" name="contact[{{ 'contact.form.message' | t }}]">{% if form.body %}{{ form.body }}{% endif %}</textarea>

          <input type="submit" class="btn" value="{{ 'contact.form.submit' | t }}">

        {% endform %}
      </div>
    </div>
  </div>
</div>

{% section 'newsletter_about'%}
{% section 'google-maps'%}
 {% section 'collection-list'%}